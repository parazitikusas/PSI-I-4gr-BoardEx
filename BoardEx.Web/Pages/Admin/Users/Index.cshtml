@page
@model BoardEx.Web.Pages.Admin.Users.IndexModel
@{
}


<div class="bg-secondary bg-opacity-10 py-2 mb-5">
	<div class="container">
		<h1>Vartotojai</h1>
	</div>
</div>

<div>
	<div class="container">

		<div class="mb-3 d-flex justify-content-end">
			<!-- Button trigger modal -->
			<button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#addUserModal">
				Pridėti vartotoją
			</button>

		</div>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Username</th>
					<th>Email</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var user in Model.Users)
				{
					<tr>
						<td>@user.Id</td>
						<td>@user.Username</td>
						<td>@user.Email</td>
					</tr>
				}
			</tbody>
		</table>

	</div>
</div>

<form method="post">
	<!-- Modal -->
	<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h1 class="modal-title fs-5" id="exampleModalLabel">Pridėti vartotoją</h1>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="mb-3">
						<label class="form-label">Prisijungimo vardas</label>
						<input type="text" class="form-control" asp-for="AddUserRequest.Username" />
					</div>
					<div class="mb-3">
						<label class="form-label">Email</label>
						<input type="text" class="form-control" asp-for="AddUserRequest.Email" />
					</div>
					<div class="mb-3">
						<label class="form-label">Slaptažodis</label>
						<input type="text" class="form-control" asp-for="AddUserRequest.Password" />
					</div>
					<div class="mb-3">
						<div class="form-check">
							<input class="form-check-input" type="checkbox" value="User" checked disabled>
							<label class="form-check-label" for="flexCheckDefault">
								Vartotojas
							</label>
						</div>
						<div class="form-check">
							<input class="form-check-input" type="checkbox" value="Admin" asp-for="AddUserRequest.AdminCheckbox">
							<label class="form-check-label" for="flexCheckChecked">
								Admin
							</label>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Uždaryti</button>
					<button type="submit" class="btn btn-dark">Įsaugoti</button>
				</div>
			</div>
		</div>
	</div>
</form>