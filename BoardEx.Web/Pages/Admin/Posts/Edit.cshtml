@page "{id:Guid}"
@model BoardEx.Web.Pages.Admin.Posts.EditModel
@{
}


<div class="bg-secondary bg-opacity-10 py-2 mb-5">
	<div class="container">
		<h1>Redaguoti skelbimą</h1>
	</div>
</div>

@if (Model.BoardAd != null)
{
	<div>
		<div class="container">
			<form method="post">
				<div class="mb-3">
					<label for="id" class="form-label">Id</label>
					<input type="text" class="form-control" id="id" asp-for="BoardAd.Id" readonly>
				</div>

				<div class="mb-3">
					<label for="name" class="form-label">Pavadinimas</label>
					<input type="text" class="form-control" id="name" asp-for="BoardAd.Name">
				</div>

				<div class="mb-3">
					<label for="city" class="form-label">Miestas</label>
					<input type="text" class="form-control" id="city" asp-for="BoardAd.City">
				</div>

				<div class="mb-3">
					<label for="content" class="form-label">Aprašymas</label>
					<textarea class="form-control" id="content" asp-for="BoardAd.Content"></textarea>
				</div>

				<div class="mb-3">
					<label for="price" class="form-label">Kaina</label>
					<input type="number" class="form-control" id="price" asp-for="BoardAd.Price">
				</div>

				<div class="mb-3">
					<label for="featuredImageUrl" class="form-label">Nuotrauka</label>
					<input type="text" class="form-control" id="featuredImageUrl" asp-for="BoardAd.FeaturedImageUrl">
				</div>

				<div class="mb-3">
					<label for="publishedDate" class="form-label">Skelbimo įdėjimo data</label>
					<input type="date" class="form-control" id="publishedDate" asp-for="BoardAd.PublishedDate">
				</div>

				<div class="mb-3">
					<label for="author" class="form-label">Autorius</label>
					<input type="text" class="form-control" id="author" asp-for="BoardAd.Author">
				</div>

				<div class="form-check mb-3">
					<input class="form-check-input" type="checkbox" id="isSold" asp-for="BoardAd.IsSold" />
					<label for="isSold" class="form-check-label">
						Parduota
					</label>
				</div>

				<div class="mb-3 d-flex justify-content-between">
					<button class="btn btn-primary" type="submit" asp-page-handler="Edit">Atnaujinti</button>

					<button class="btn btn-danger" type="submit" asp-page-handler="Delete">Ištrinti</button>
				</div>
			</form>
		</div>
	</div>
}
else
{
	<div class="container">
		<p>Board Ad Not Found!</p>
	</div>
}