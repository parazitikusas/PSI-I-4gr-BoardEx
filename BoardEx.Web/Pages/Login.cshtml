@page
@model BoardEx.Web.Pages.LoginModel
@{
}


<div class="container mx-auto">
	<div class="row justify-content-center">
		<div class="col-12 col-lg-6">

			<h1 class="mt-5 mb-3 h3">Prisijungti</h1>

			<partial name="_Notification"></partial>

			<form method="post">

				<div class="mb-3">
					<label class="form-label">Vartotojo vardas</label>
					<input type="text" class="form-control" asp-for="LoginViewModel.Username" />
				</div>

				<div class="mb-3">
					<label class="form-label">Slaptažodis</label>
					<input type="password" class="form-control" asp-for="LoginViewModel.Password" />
				</div>

				<div class="mb-3">
					<button type="submit" class="btn bg-dark text-light">Prisijungti</button>
				</div>

			</form>
		</div>
	</div>
</div>